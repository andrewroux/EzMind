@model EasyMind.Models.Profile

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.PhotoPath" alt="" />
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Profile" asp-action="Details" asp-route-profileid="@Model.ProfileId">@Model.FirstName</a>
            </h3>
            <p>@Model.AboutMe</p>
        </div>
        <div class="addToCart text-right">
            <p class="button ">
                <a class="btn btn-success" id="cartButton" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-profileid="@Model.ProfileId">
                    Add to cart
                </a>
            </p>
        </div>
    </div>
</div>